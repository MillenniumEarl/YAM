{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Electron: Main",
          "protocol": "inspector",
          "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
          "runtimeArgs": [
              "--remote-debugging-port=9333",
              "."
          ],
          "windows": {
              "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
          },
          "cwd":"${workspaceFolder}",
          "sourceMaps": true,
          "skipFiles": [
            "<node_internals>/**",
            "node_modules/**"
        ]
      },
      {
          "name": "Electron: Renderer",
          "type": "pwa-chrome",
          "request": "attach",
          "port": 9333,
          "webRoot": "${workspaceFolder}/dist",
          "timeout": 60000,
          "sourceMaps": true,
          "skipFiles": [
            "<node_internals>/**",
            "node_modules/**"
        ]
      }
  ],
  "compounds": [
      {
          "name": "Electron: All",
          "configurations": [
              "Electron: Main",
              "Electron: Renderer"
          ],
          "preLaunchTask": "npm: build"
      }
  ]
}